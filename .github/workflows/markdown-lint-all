name: Markdown Lint

on:
  pull_request:
    branches: [ main ]

jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Setup Node
        uses: actions/setup-node@v3
        with:
          node-version: 18
      - run: npm install -g markdownlint-cli2
      - name: Run markdownlint
        run: markdownlint-cli2 '**/*.md' '#node_modules'